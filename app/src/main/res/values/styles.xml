<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    LinerLayout-->
    <style name="liner_ver_total">
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="liner_hor_total">
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="liner_hor_Edit_TV">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="liner_hor_spinner">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_edittext</item>

    </style>
<!--    ImageView-->
    <style name="imageView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

<!--    EditText-->
    <style name="EditText">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#a3a3a3</item>
        <item name="font">@font/open_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
<!--    TextView-->
    <style name="TextView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="font">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="color">#000000</item>
    </style>
    <style name="TextViewCheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="font">@font/open_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="color">#000000</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="TextViewQuenTK">
        <item name="android:layout_width">150sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="font">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#17ead9</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="TextViewDangKy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="font">@font/open_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="color">#000000</item>
    </style>
<!--    CheckBox-->
    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
<!--    Button-->
    <style name="ButtonDangKy">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="font">@font/open_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ButtonTypeDangNhap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="font">@font/open_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>

    </style>
<!--    Spinner-->
    <style name="Spinner">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>