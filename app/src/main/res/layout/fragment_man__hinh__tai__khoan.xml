<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FragmentManHinhTaiKhoan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_InformationAccountApp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tài khoản của bạn"></TextView>

        <TextView
            android:id="@+id/textView_InformationAccountGoogle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tài khoản Google của bạn"></TextView>

        <TextView
            android:id="@+id/textView_InformationAccountFaceBook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tài khoản Facebook của bạn"></TextView>

        <Button
            android:id="@+id/buttonDangXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng xuất"></Button>
    </LinearLayout>

</RelativeLayout>